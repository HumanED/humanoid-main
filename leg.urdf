<robot name="humanoid_leg">

  <!-- Materials -->
  <material name="orange"><color rgba="1.0 0.4 0.0 1"/></material>
  <material name="red"><color rgba="0.9 0.2 0.2 1"/></material>
  <material name="green"><color rgba="0.2 0.9 0.2 1"/></material>
  <material name="blue"><color rgba="0.2 0.2 0.9 1"/></material>
  <material name="yellow"><color rgba="0.9 0.9 0.2 1"/></material>
  <material name="cyan"><color rgba="0.2 0.9 0.9 1"/></material>

  <!-- LINKS WITH SIMPLE VISUALS (meters) -->

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.04 0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="hip1">
    <!-- hip_yaw housing (axis is Z, cylinder default is Z -> OK) -->
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.018" length="0.03"/>
      </geometry>
      <material name="red"/>
    </visual>

    <!-- connector bar from hip1 origin to hip_roll joint at +X = 0.071129 -->
    <visual>
      <origin xyz="0.0355645 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.018 0.018"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="hip2">
    <!-- hip_roll housing (joint axis is X, rotate cylinder so its length is along X) -->
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.016" length="0.026"/>
      </geometry>
      <material name="red"/>
    </visual>

    <!-- connector bar from hip2 origin to hip_pitch joint at +X = 0.0947477 -->
    <visual>
      <origin xyz="0.04737385 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.0947477 0.018 0.018"/>
      </geometry>
      <material name="green"/>
    </visual>

    <!-- tiny cap at the end of the connector to visually mark the hip_pitch location -->
    <visual>
      <origin xyz="0.0947477 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.016" length="0.02"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- Thigh link: from hip_pitch to knee is 0.12 m along -Z -->
  <link name="hip3">
    <visual>
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
      <geometry>
        <box size="0.018 0.018 0.12"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <!-- Knee link: knee housing + shin segment down to ankle_pitch (0.12 m) -->
  <link name="knee">
    <!-- knee joint axis is Y, rotate cylinder so its length is along Y -->
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.016" length="0.02"/>
      </geometry>
      <material name="red"/>
    </visual>

    <visual>
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
      <geometry>
        <box size="0.018 0.018 0.12"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="ankle1">
    <!-- ankle_pitch joint axis is Y, rotate cylinder so its length is along Y -->
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.016" length="0.02"/>
      </geometry>
      <material name="red"/>
    </visual>

    <!-- NEW: connector between ankle_pitch and ankle_roll (50mm along -Z) -->
    <visual>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.018 0.018 0.05"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="ankle2">
    <!-- Foot -->
    <visual>
      <origin xyz="0.01 0 -0.01" rpy="0 0 0"/>
      <geometry>
        <box size="0.051 0.02 0.02"/>
      </geometry>
      <material name="green"/>
    </visual>

    <!-- ankle_roll housing visual marker at link origin (axis X) -->
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.016" length="0.02"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <!-- JOINTS (unchanged from your latest) -->

  <joint name="hip_yaw" type="continuous">
    <parent link="base_link"/>
    <child link="hip1"/>
    <origin xyz="0 0 0" rpy="0 0.785398 0" />
    <axis xyz="0 0 1" />
  </joint>

  <joint name="hip_roll" type="continuous">
    <parent link="hip1"/>
    <child link="hip2"/>
    <origin xyz="0.071129 0 0" rpy="0 1.5708 0" />
    <axis xyz="1 0 0" />
  </joint>

  <joint name="hip_pitch" type="continuous">
    <parent link="hip2"/>
    <child link="hip3"/>
    <origin xyz="0.0947477 0 0" rpy="0 2.35619 3.14159" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="knee" type="continuous">
    <parent link="hip3"/>
    <child link="knee"/>
    <origin xyz="0 0 -0.12" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="ankle_pitch" type="continuous">
    <parent link="knee"/>
    <child link="ankle1"/>
    <origin xyz="0 0 -0.12" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="ankle_roll" type="continuous">
    <parent link="ankle1"/>
    <child link="ankle2"/>
    <origin xyz="0 0 -0.05" rpy="0 0 0" />
    <axis xyz="1 0 0" />
  </joint>

</robot>
